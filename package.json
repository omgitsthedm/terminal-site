{
  "name": "terminal-site",
  "version": "1.0.0",
  "description": "Minimal static HTML site set up for GitHub + Netlify.",
  "main": "script.js",
  "scripts": {
    "dev": "netlify dev",
    "deploy:preview": "netlify deploy --dir . --no-build",
    "deploy:prod": "netlify deploy --prod --dir . --no-build",
    "lint:js": "eslint .",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:html": "htmlhint \"**/*.html\"",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:lighthouse": "echo \"Lighthouse runs in GitHub Actions workflow\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omgitsthedm/terminal-site.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/omgitsthedm/terminal-site/issues"
  },
  "homepage": "https://github.com/omgitsthedm/terminal-site#readme",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@netlify/plugin-sitemap": "^0.8.1",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "htmlhint": "^1.9.1",
    "prettier": "^3.8.1",
    "stylelint": "^17.2.0",
    "stylelint-config-standard": "^40.0.0"
  }
}
